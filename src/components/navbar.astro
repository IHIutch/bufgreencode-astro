---
import { ExternalLink } from 'lucide-react'
import { css } from '../../styled-system/css'
import { square } from '../../styled-system/patterns'
import SearchComponent from './search'
---

<nav
  class={css({
    pos: 'relative',
    insetX: '0',
    display: 'flex',
    h: { base: '14', lg: '16' },
    flexShrink: '0',
    borderBottomWidth: '1px',
    borderBottomColor: 'gray.200',
    bg: 'white',
  })}
>
  <div
    class={css({
      pos: 'relative',
      mx: 'auto',
      w: 'full',
      maxW: 'breakpoint-2xl',
    })}
  >
    <div
      class={css({
        display: 'flex',
        h: 'full',
        alignItems: 'center',
      })}
    >
      <div
        class={css({
          h: 'full',
          flexShrink: '0',
          w: {
            base: '16',
            md: '40',
            lg: '72',
            '2xl': '80',
          },
          pl: '4',
        })}
      >
        <div
          class={css({
            display: 'flex',
            h: 'full',
            alignItems: 'center',
          })}
        >
          <a
            href="/"
            class={css({
              display: 'block',
              h: 'full',
              w: 'full',
              py: '1',
              lg: {
                mr: '4',
                py: '2',
              },
            })}
          >
            <img
              src="/meta/bufgreencode-icon.svg"
              alt="Buffalo Green Code"
              height={47}
              width={47}
              class={css({
                h: 'full',
                w: 'auto',
                md: {
                  display: 'none',
                },
              })}
            />
            <img
              src="/meta/bufgreencode-logo.svg"
              alt="Buffalo Green Code"
              height={47}
              width={115}
              class={css({
                display: {
                  base: 'none',
                  md: 'block',
                },
                h: 'full',
                w: 'auto',
              })}
            />
          </a>
        </div>
      </div>
      <div
        class={css({
          h: 'full',
          flex: '1',
          px: '4',
          md: {
            display: 'block',
            px: '8',
          },
          w: { base: 'full', xl: 'calc(100% - token(sizes.80))' },
        })}
      >
        <div
          class={css({
            display: 'flex',
            h: 'full',
            alignItems: 'center',
            mx: 'auto',
            maxW: 'prose',
            w: 'full',
          })}
        >
          <SearchComponent client:load />
        </div>
      </div>
      <div
        class={css({
          display: 'none',
          h: 'full',
          flexShrink: '0',
          alignItems: 'center',
          pr: '4',
          fontSize: 'sm',
          lineHeight: 'sm',
          fontWeight: 'medium',
          md: { display: 'flex' },
          w: {
            lg: '72',
            '2xl': '80',
          },
        })}
      >
        <a
          href="/disclaimer/"
          class={css({
            ml: '-2',
            px: '2',
            py: '2',
            color: {
              base: 'gray.600',
              _hover: 'gray.900',
            },
            fontWeight: 'medium',
          })}
        >
          Disclaimer
        </a>
        <a
          class={css({
            display: 'flex',
            alignItems: 'center',
            ml: '2',
            px: '2',
            py: '2',
            color: {
              base: 'gray.600',
              _hover: 'gray.900',
            },
            fontWeight: 'medium',
          })}
          href="https://github.com/IHIutch/bufgreencode_v2/issues/new?assignees=&labels=&projects=&template=found-an-issue.yml"
          target="_blank"
          rel="noreferrer"
        >
          <span
            class={css({
              mr: '1',
            })}>Report an Issue</span
          >
          <span>
            <ExternalLink className={square({ size: '3' })} />
          </span>
        </a>
      </div>
    </div>
  </div>
</nav>
